<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ufscar.sor.dcomp.facilitas">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_clipboard"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />


                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SummaryActivity"
            android:label="@string/action_summary"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/action_settings"
            android:theme="@style/Theme.AppCompat.Light">
        </activity>
        <activity
            android:name=".activity.InputOrderActivity"
            android:label="@string/order"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustPan">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".activity.InputProductActivity"
            android:label="@string/product"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".activity.OrderDetailActivity"
            android:label="@string/order"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".activity.ProductDetailActivity"
            android:label="@string/product"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
    </application>

</manifest>